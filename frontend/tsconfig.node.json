{
  "compilerOptions": {
    "composite": true,
    "target": "ES2023",
    "lib": ["ES2023"],
    "module": "ESNext",
    "skipLibCheck": true,

    // Usa uno de estos (prueba primero Bundler; si VS Code insiste, usa nodenext):
    "moduleResolution": "Bundler",
    // "moduleResolution": "nodenext",

    "noEmit": true,
    "types": ["node"],
    "allowSyntheticDefaultImports": true,
    "strict": true
  },
  "include": ["vite.config.ts"]
}